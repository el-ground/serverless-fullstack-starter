{
  "compilerOptions": {
    // Must match with eslintrc.json's version.
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    // Search under node_modules for non-relative imports.
    "moduleResolution": "node",
    // Process & infer types from .js files.
    "allowJs": true,
    // Import non-ES modules as default imports. -> set to false, since we're es module, and setting it will make things bad.
    "esModuleInterop": true,
    // skip typechecking libraries.
    "skipLibCheck": true,
    // Enable strictest settings like strictNullChecks & noImplicitAny.
    "strict": true,
    "strictNullChecks": true,
    // Disallow features that require cross-file information for emit.
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true, // typescript module
    // Allow JSON import
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      // exmaple of directory aliases
      /*
      "#server/*": [
        "server/*"
      ],
      "#src/*": [
        "src/*"
      ],
      "#schema/*": [
        "schema/*"
      ],
      */
      "@/*": [
        "./*"
      ]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      },
      {
        "name": "next"
      }
    ],
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "noEmit": false
  },
  "include": [
    "server/**/*",
    "src/**/*",
    "schema/**/*",
    ".next/types/**/*.ts", // client
    "next-env.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    ".next"
  ],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}